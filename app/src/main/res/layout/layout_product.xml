<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dp_5"
    android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5"
    android:paddingTop="@dimen/dp_5">

    <CheckBox
        android:id="@+id/cb_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_product"
        android:layout_toRightOf="@id/cb_product"
        android:layout_width="@dimen/dp_45"
        android:layout_height="@dimen/dp_45" />
    <com.example.windows.ijingdong.cart.subtracter.AddDecreaseView
        android:id="@+id/subtracter"
        android:layout_toRightOf="@id/image_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></com.example.windows.ijingdong.cart.subtracter.AddDecreaseView>
    <LinearLayout
        android:id="@+id/ll_text"
        android:layout_toRightOf="@id/subtracter"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_product_name"
            android:layout_toRightOf="@id/image_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/txt_product_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>

